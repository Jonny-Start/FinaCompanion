<%- include('./layout/head', { NAME_CSS: "changePassword" }) %>

<body id="changePassword">
  <%- include('./layout/notifications')%>

  <%- include('./layout/header')%>

  <main>

    <section id="includeForm">

      <h1>Actualización de Contraseña</h1>
      <p>Por favor ingrese la nueva contraseña para la actualización
      

      <form action="/changePassword" method="POST">

        <label for="password" id="labelPassword">
          <br />
          <input type="password" name="password" id="password" placeholder="Contraseña Actual" required>
        </label>

        <label for="confPassword" id="labelConfPassword">
          <br />
          <input type="password" name="confPassword" id="confPassword" placeholder="Contraseña Nueva" required>
        </label>

        <label for="repPassword" id="labelrepPassword">
          <br />
          <input type="password" name="repPassword" id="repPassword" placeholder="Confirmar Contraseña" required>
        </label>
        <p id="confirmPass" class="hide">¡Las contraseñas no son las mismas!</p>

        <div id="Content-Buttons">
          <button type="submit" id="sendForm">Aceptar</button>
          <button type="submit" id="sendForm">Cancelar</button>
          </div>
      </form>
    </section>
  <%- include('./layout/footer') %>
</body>

<%- include('./layout/closeHtml') %>