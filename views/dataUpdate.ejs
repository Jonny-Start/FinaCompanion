<%- include('./layout/head', { NAME_CSS: "dataUpdate" }) %>

<body id="dataUpdate">
  <%- include('./layout/notifications')%>

  <%- include('./layout/header', { viewSettings: true })%>

  <main>

    <section id="includeForm">

      <h1>Actualización de Datos</h1>
      <p>Ingrese los datos que requiere modificar
      <p>

      <form action="/dataUpdate" method="POST">

        <label for="fullName" id="labelFullName">
          <br />
          <input type="text" name="fullName" id="fullName" placeholder="Nombre Completo" required>
        </label>

        <label for="phoneNumber" id="labelPhoneNumber">
          <br />
          <input type="number" name="phoneNumber" id="phoneNumber" placeholder="Numero Telefónico" required>
        </label>

        <label for="gender" id="labelGender">
          <br />
          <input type="text" name="gender" id="gender" placeholder="Temporal ingresar el genero" required>
        </label>

        <div id="Content-Buttons">
          <button type="submit" id="sendForm">Aceptar</button>
          <button type="submit" id="sendForm">Cancelar</button>
        </div>

        <p>¿Desea cambiar la contraseña? <a href="/changePassword">Cambiar Contraseña</a></p>
      </form>
    </section>

    <%- include('./layout/footer') %>
</body>

<%- include('./layout/closeHtml') %>