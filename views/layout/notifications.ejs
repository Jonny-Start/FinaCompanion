 <script type="text/javascript">
   // Obtener todos los elementos con la clase "notify"
   const notifyElements = document.querySelectorAll(".notify");

   // Agregar un controlador de eventos "click" a cada elemento
   notifyElements.forEach(function(element) {
     element.addEventListener("click", function() {
       element.style.display = "none"; // Ocultar el elemento
     });
   });
 </script>