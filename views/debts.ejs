  <div id="popUpOption">
    <section id="contentPopUp">
      <h2>¿Que deseas agregar?</h2>
      <div id="contentOptionsButtons">
        <button id="ingreso" onclick="changeView('ingreso')">
          <span class="material-symbols-outlined">
            stacked_line_chart
          </span>
          <br />
          Ingreso
        </button>
        <button id="deuda" onclick="changeView('deuda')">
          <span class="material-symbols-outlined">
            line_axis
          </span>
          <br />
          Deuda/Egreso
        </button>
      </div>
    </section>
  </div>


  <div id="popUpIncome" class="hide popUpOptionAdd">
    <section class="contentPopUpAdd">
      <i class="fa-solid fa-xmark buttonXmark" onclick="showPopUp('income')"></i>

      <h2>Registro de nuevo ingreso</h2>

      <form action="/debts" method="post">

        <div class="group group-2">
          
          <label for="Contacto" id="labelContacto" class="inputGroup">
            Contacto <span style="color:red;">*</span>
            <br>
            <select name="gender" id="gender">
              <option selected=""></option>
              <option value="Jo">Jonny</option>
              <option value="An">Angel</option>
              <option value="Al">Alejandro</option>
              <option value="Tr">Trujillo</option>
              <option value="Es">Estructura</option>
              <option value="O">Otro</option>
            </select>
          </label>

          <label for="Monto" id="labelMonto" class="inputGroup">
            Saldo <span style="color:red;">*</span>
            <br>
            <input type="number" name="Monto" id="Monto" required="">
            <i class="fa-solid fa-hashtag"></i>
          </label>
          
        </div>


        <div class="group group-3">

          <label for="diaPago" id="labeldiaPago" class="inputGroup">
            Día de corte para pago<span style="color:red;">*</span>
            <br>
            <select name="gender" id="gender">
              <option selected=""></option>
              <option value="a">5</option>
              <option value="b">15</option>
              <option value="c">25</option>
              <option value="d">30</option>
              <option value="O">Otro</option>
            </select>
          </label>

          <label for="tasaInteres" id="labeltasaInteres" class="inputGroup">
            Tasa de interes
            <br>
            <input type="number" name="tasaInteres" id="tasaInteres" required="">
                <i class="fa-solid fa-percent"></i>
          </label>

        </div>


        <div class="group group-4">

          <label for="dateMaxv" id="labeldateMaxv" class="inputGroup">
            Fecha máxima de pago<span style="color:red;">*</span>
            <br>
            <input type="date" name="dateMaxv" id="dateMaxv" required="">
          </label>

          <label for="Icono" id="labelIcono" class="inputGroup">
            Icono 
            <br>
            <select name="gender" id="gender">
              <option selected=""></option>
              <option value="IM1">IMAGEN1</option>
              <option value="IM2">IMAGEN2</option>
              <option value="IM3">IMAGEN3</option>
              <option value="IM4">IMAGEN4</option>
              <option value="IM5">Otro</option>
            </select>
          </label>

          <label for="Desc" id="labelDesc" class="inputGroup">
            Descripción
            <br>
            <input type="text" name="Desc" id="Desc" required="">
            <i class="fa-solid fa-pen"></i>
          </label>

        </div>

        <div id="Content-Buttons">
          <button type="submit" id="sendForm">Añadir</button>
          <button type="submit" id="sendForm">Cancelar</button>
        </div>

      </form>

    </section>
  </div>

  <div id="popUpSpent" class="hide popUpOptionAdd">
    <section class="contentPopUpAdd">
      <i class="fa-solid fa-xmark buttonXmark" onclick="showPopUp('spend')"></i>

      <h2>Registro de nuevo gasto o deuda</h2>
    </section>
  </div>


  <script type="text/javascript">
    const contentIngreso = document.getElementById("contentIngreso");
    const contentEgreso = document.getElementById("contentEgreso");
    const popUpOption = document.getElementById("popUpOption");

    const inputCheckFisrt = document.getElementById("tab1");
    const inputCheckThird = document.getElementById("tab3");

    function changeView(type) {
      (type == 'ingreso') ?
      (contentIngreso.classList.remove('hide'), inputCheckFisrt.checked = 'true') :
      (contentEgreso.classList.remove('hide'), inputCheckThird.checked = 'true');

      popUpOption.classList.add('hide');
    }

    function showPopUp(name) {
      if (name == 'income') {
        document.getElementById("popUpIncome").classList.toggle('hide');
      } else if (name == 'spend') {
        document.getElementById("popUpSpent").classList.toggle('hide');
      } else {
        return alert('Error al llamar la funcion showPopUp: ' + name);
      }
    }

    window.addEventListener('DOMContentLoaded', () => {
      // Pop-Up de ingreso
      const newIncome = document.getElementById("newIncome");
      const newSpent = document.getElementById("newSpent");

      if (newIncome && newSpent) {
        newIncome.addEventListener('click', () => showPopUp('income'));
        newSpent.addEventListener('click', () => showPopUp('spend'));
      }
    });
  </script>

  <%- include('./layout/footer') %>
</body>

